<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Accounts</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <%- include('partials/header') %>

    <div class="container my-5">
      <h1 class="mb-4 text-center">User Accounts</h1>

      <% if (users.length> 0) { %>
        <div class="row g-4">
          <% users.forEach((user, index)=> { %>
            <div class="col-md-6">
              <div class="card shadow-sm border-secondary">
                <div class="card-body">
                  <h5 class="card-title text-secondary">Username: <%= user.username %>
                  </h5>

                  <!-- Trigger Delete Confirmation Modal -->
                  <button type="button" class="btn btn-outline-danger w-100 mt-3" data-bs-toggle="modal"
                    data-bs-target="#deleteModal<%= index %>">
                    Delete User
                  </button>

                  <!-- Modal -->
                  <div class="modal fade" id="deleteModal<%= index %>" tabindex="-1"
                    aria-labelledby="deleteModalLabel<%= index %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteModalLabel<%= index %>">Confirm Delete</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Are you sure you want to delete user 
                          <strong>
                            <%= user.username %>
                          </strong>?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                          <form action="/deleteAccount" method="POST">
                            <input type="hidden" name="userId" value="<%= user.userId %>">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
            <% }) %>
        </div>
        <% } else { %>
          <div class="alert alert-warning text-center">
            No user accounts found.
          </div>
          <% } %>

    </div>

    <%- include('partials/footer') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>